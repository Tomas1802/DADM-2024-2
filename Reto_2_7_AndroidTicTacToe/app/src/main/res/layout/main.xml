<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="16dp">

    <GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="3"
        android:rowCount="3"
        android:alignmentMode="alignBounds"
        android:useDefaultMargins="true"
        >

        <Button
            android:id="@+id/button1"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/custom_button"
            android:textSize="64sp"
        />

        <Button
            android:id="@+id/button2"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/custom_button"
            android:textSize="64sp"
        />

        <Button
            android:id="@+id/button3"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/custom_button"
            android:textSize="64sp"
            />

        <Button
            android:id="@+id/button4"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/custom_button"
            android:textSize="64sp"
        />

        <Button
            android:id="@+id/button5"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/custom_button"
            android:textSize="64sp"
        />

        <Button
            android:id="@+id/button6"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/custom_button"
            android:textSize="64sp"
            />

        <Button
            android:id="@+id/button7"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/custom_button"
            android:textSize="64sp"
        />

        <Button
            android:id="@+id/button8"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/custom_button"
            android:textSize="64sp"
        />

        <Button
            android:id="@+id/button9"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/custom_button"
            android:textSize="64sp"
        />
    </GridLayout>


    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button_restart"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="#25a0a8"
        android:textColor="#fff"
        android:paddingHorizontal="10dp"
        android:visibility="invisible"
        android:layout_marginVertical="20dp"
        android:text="Restart game"
    />

    <Button
        android:id="@+id/end_restart"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="#25a0a8"
        android:textColor="#fff"
        android:paddingHorizontal="10dp"
        android:visibility="invisible"
        android:layout_marginVertical="20dp"
        android:text="End game"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_below="@id/statusTextView">

        <TextView
            android:id="@+id/winsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wins: 0"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="16dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/lossesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Losses: 0"
            android:layout_toEndOf="@id/winsTextView"
            android:layout_marginEnd="16dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tiesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ties: 0"
            android:layout_toEndOf="@id/lossesTextView"
            android:textSize="16sp" />

    </RelativeLayout>
</LinearLayout>